<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_gravity="fill"
    android:layout_marginBottom="@dimen/customgrid_item_marginvertical"
    android:layout_marginEnd="@dimen/customgrid_item_marginhorizontal"
    android:layout_marginStart="@dimen/customgrid_item_marginhorizontal"
    android:layout_marginTop="@dimen/customgrid_item_marginvertical"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    grid:layout_columnWeight="1">

    <LinearLayout
        android:id="@+id/customgrid_container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/controller_card_view_content_padding">

    </LinearLayout>

</android.support.v7.widget.CardView>