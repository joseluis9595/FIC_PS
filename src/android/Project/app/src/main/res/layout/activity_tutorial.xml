<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.TutorialActivity">

    <es.udc.psi1718.project.view.customviews.viewpager.ViewPagerCustomDuration
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/layout_tutorialactiv_buttonscontainer">

    </es.udc.psi1718.project.view.customviews.viewpager.ViewPagerCustomDuration>

    <LinearLayout
        android:id="@+id/layout_activtutorial_dotscontainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_tutorialactiv_buttonscontainer"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        >
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_tutorialactiv_buttonscontainer"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorLightBlue"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_tutorialctiv_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:alpha=".8"
            android:background="?android:attr/selectableItemBackground"
            android:text="@string/tutorial_btnskip_normal"
            android:textAllCaps="true"
            android:textColor="@android:color/white"/>

        <ImageView
            android:id="@+id/btn_tutorialctiv_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:padding="@dimen/main_margin"
            app:srcCompat="@drawable/avd_next_to_check"
            />

        <!--<Button-->
        <!--android:id="@+id/btn_tutorialctiv_next"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentEnd="true"-->
        <!--android:background="?android:attr/selectableItemBackground"-->
        <!--android:text="@string/tutorial_btnnext_normal"-->
        <!--android:textAllCaps="true"-->
        <!--android:textColor="@android:color/white"/>-->
    </RelativeLayout>

</RelativeLayout>